body
  background-image: url('../img/bg.jpg');
  background-size: cover;
  background-position: center;
  background-attachment: fixed;
  min-height: 100vh;
  min-width: 100vw;
  overflow: hidden;
  .wrapper
    width: 95%;
    max-width: 900px;
    margin: 0 auto;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    text-align: center;
    h1
      font-size: 5em;
      font-family: "Roboto Slab"
      color: $white
      padding: 0.3em 0.5em
      border: 10px solid $white
      text-transform: uppercase;
      font-weight: 900;
      background-color: rgba($white, 0.1)
      text-shadow: 0px 0px 40px rgba($black, 0.5)
    p
      font-size: 1.25em
      font-family: "Roboto"
      font-weight: 200;
      letter-spacing: 5px
      color: $white
